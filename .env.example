# KubeNexus Enterprise SaaS Platform - Environment Configuration
# Copy this file to .env and update the values according to your environment

# Application Settings
APP_NAME=KubeNexus
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kubenexus
POSTGRES_USER=kubenexus_user
POSTGRES_PASSWORD=your_secure_password_here

# Security Settings
JWT_SECRET=super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
KUBECONFIG_ENCRYPTION_KEY=32_char_encryption_key_here_123456789012
CLOUD_PROVIDER_ENCRYPTION_KEY=another_32_char_key_for_cloud_123456789

# Service Configuration
AUTH_SERVICE_PORT=8000
CLUSTER_MANAGER_SERVICE_PORT=8001
API_GATEWAY_PORT=80

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:80
NODE_ENV=production
